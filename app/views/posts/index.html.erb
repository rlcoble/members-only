<table>
  <thead>
    <tr>
      <th>Title</th>
      <% if @logged_in %>
      <th>Author</th>
      <% end %>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <% if @logged_in %>
      	<th><%= User.find(post.user_id).name %></th>
      	<% end %>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>